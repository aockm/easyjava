	<resultMap id="base_result_map" type="com.easychat.entity.po.WxUser">
		<!--主键ID-->
		<id column="id" property="id"/>
		<!--用户名-->
		<result column="name" property="name"/>
		<!--解析次数-->
		<result column="video_number" property="videoNumber"/>
		<!--累计签到次数-->
		<result column="sign_in_sum" property="signInSum"/>
		<!--最后签到时间-->
		<result column="end_sign_in_time" property="endSignInTime"/>
		<!--用户openId-->
		<result column="open_id" property="openId"/>
		<!--创建时间-->
