		<!--最后解析时间-->
		<result column="last_parsing_time" property="lastParsingTime"/>
	</resultMap>

	<!--通用查询结果列-->
	<sql id="base_column_list" >
		id,name,video_number,sign_in_sum,end_sign_in_time,open_id,create_time,last_parsing_time
	</sql>

	<!--基础查询条件-->
	<sql id="base_query_condition" >
		<if test="query.id!=null">
			and id = #{query.id}
		</if>
		<if test="query.name!=null and query.name!='' ">
			and name = #{query.name}
		</if>
		<if test="query.videoNumber!=null">
			and video_number = #{query.videoNumber}
		</if>
		<if test="query.signInSum!=null">
			and sign_in_sum = #{query.signInSum}
		</if>
		<if test="query.endSignInTime!=null">
			and end_sign_in_time = #{query.endSignInTime}
		</if>
		<if test="query.openId!=null and query.openId!='' ">
			and open_id = #{query.openId}
		</if>
		<if test="query.createTime!=null">
			and create_time = #{query.createTime}
		</if>
		<if test="query.lastParsingTime!=null">
			and last_parsing_time = #{query.lastParsingTime}
		</if>
	</sql>

	<!--扩展查询条件列-->
	<sql id="query_condition_extend" >
		<if test="query.nameFuzzy!=null and query.nameFuzzy!='' ">
			 and name like concat ('%',#{query.nameFuzzy}, '%')
		</if>
		<if test="query.openIdFuzzy!=null and query.openIdFuzzy!='' ">
			 and open_id like concat ('%',#{query.openIdFuzzy}, '%')
		</if>
	</sql>

	<!--扩展的查询条件-->
	<sql id="query_condition" >
		<where>
			<include refid="base_query_condition" />
			<include refid="query_condition_extend" />
		</where>

	</sql>

	<!--查询集合-->
	<select id="selectList" resultMap="base_result_map">
		SELECT <include refid="base_column_list"/> FROM wx_user
		<include refid="query_condition"/>
		<if test="query.orderBy!=null">order by ${query.orderBy}</if>
		<if test="query.simplePage!=null">limit #{query.simplePage.startIndex}, #{query.simplePage.endIndex}</if>
	</select>

	<!--查询集合-->
	<select id="selectCount" resultType="java.lang.Integer">
